import matplotlib.pyplot as plt

months = [
    "Jan", "Feb", "Mar", "Apr", "May", "Jun",
    "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"
]

sales = [1200, 1500, 1700, 1600, 1800, 2100, 2400, 2300, 2200, 2500, 2700, 3000]

plt.figure()
plt.plot(months, sales, marker='o')
plt.xlabel("Month")
plt.ylabel("Sales")
plt.title("Monthly Sales Over One Year")
plt.grid(True)
plt.show()
